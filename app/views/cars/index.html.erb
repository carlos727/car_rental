<h1>Listing cars</h1>

<table>
  <thead>
    <tr>
      <th>Plate</th>
      <th>Mileage</th>
      <th>Capacity</th>
      <th>Mark</th>
      <th>Year</th>
      <th>Color</th>
      <th>Motor</th>
      <th>Description</th>
      <th>Gasoline</th>
      <th>Transmision</th>
      <th>Trunk</th>
      <th>Door</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.plate %></td>
        <td><%= car.mileage %></td>
        <td><%= car.capacity %></td>
        <td><%= car.mark %></td>
        <td><%= car.year %></td>
        <td><%= car.color %></td>
        <td><%= car.motor %></td>
        <td><%= car.description %></td>
        <td><%= car.gasoline %></td>
        <td><%= car.transmision %></td>
        <td><%= car.trunk %></td>
        <td><%= car.door %></td>
        <td><%= link_to 'Show', car %></td>
        <td><%= link_to 'Edit', edit_car_path(car) %></td>
        <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

